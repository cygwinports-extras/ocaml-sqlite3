inherit ocaml

DESCRIPTION="OCaml SQLite3 bindings"
HOMEPAGE="http://www.ocaml.info/home/ocaml_sources.html"
SRC_URI="http://hg.ocaml.info/release/${PN}/archive/release-${PV}.tar.bz2"
SRC_DIR="${PN}-release-${PV}"
PATCH_URI="1.6.1-build.patch"

src_compile() {
	lndirs
	cd ${B}
	cygconf
	cygmake -j1
}

src_install() {
	cd ${B}
	dodir /usr/bin
	USE_DESTDIR=0
	ocaml_install
}
